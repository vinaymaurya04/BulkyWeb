@model Category

<form method="post">
    <div class="row border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Category</h2>
            <hr />
        </div>
        <div class="row mb-3">
            <label asp-for="CategoryName"></label>
            <input asp-for="CategoryName" disabled class="form-control" />
        </div>
        <div class="row mb-3">
            <label asp-for="DisplayOrder"></label>
            <input asp-for="DisplayOrder" disabled class="form-control" />
        </div>
        <div class="row">

            <div class="col-md-6">
                <button type="submit" class="btn btn-primary form-control">Delete</button>
            </div>
            <div class="col-md-6">
                <a asp-controller="CategoryController" asp-action="Index" class="btn btn-outline-success form-control ">Back</a>
            </div>
        </div>



    </div>
</form>   